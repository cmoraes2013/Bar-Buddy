<!--JUMBOTRON-->
<div class="jumbotron card transparent z-depth-5"
    style="background-image: url('https://i.imgur.com/1Bd7PSn.jpg'); height: 800px; margin-top: 0px">

    <!-- JUMBOTRON TEXT-AREA -->
    <div class="" style="padding-bottom: 30px">
        <div class="row">
            <div class="col s12 deep-orange-text" style="text-shadow: 2px 2px 4px #000000;">
                <h1 class="center-align">BAR BUDDY</h1>
                <h5 class="center-align">review your favorite drinks</h5>
            </div>
        </div>

        <!-- SEARCH BAR -->
        <div class="container ">
            <div class="row">
                <div class="col s12">
                    
  <nav class="transparent">
    <div class="nav-wrapper">
      <form>
        <div class="input-field yellow darken-4" style="border-radius: 50px">
          <input id="search" type="search" required>
          <label class="label-icon" for="search"><i id="query"class="material-icons">search</i></label>
          <i class="material-icons">close</i>
        </div>
      </form>
    </div>
  </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!--CARD-->
<div class="container">
    <div class="row">
        <div class="col s12">
            <h3 class="header">{{bevName}}</h3>
            <div class="card horizontal">
                <div class="col s3">
                    <div class="card-image">
                        <img src="https://products3.imgix.drizly.com/ci-heineken-light-ccc4c123d69f7425.jpeg?auto=format%2Ccompress&fm=jpeg&q=20"
                            style="float: left; width: 200px; height: 200px; background-size: cover;">
                    </div>
                </div>
                <div class="col s9">
                    <div class="card-stacked">
                        <div class="row" style="margin-top: 20px">
                            <div class="col s9 description">
                                {{category}}
                            </div>
                            <div class="col s3 rating">
                                {{avgRating}}
                            </div>
                        </div>
                        <div class="card-content flow-text">
                            <p>{{description}}</p>
                        </div>
                        <div class="card-action">
                            <ul class="collapsible" data-collapsible = "accordion">
                                <li>
                                      <div class="collapsible-header"><i class="material-icons">filter_drama</i>REVIEWS</div>
                                        {{#each reviews}}
                                            <div class="collapsible-body"><span></span></div>
                                        {{/each}}
                                  
                                    <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

